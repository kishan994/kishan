<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="trainedge.autoprofiler.activity.HomeActivity"
    tools:showIn="@layout/activity_home">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="700dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:padding="8dp"
                android:text="Manage Your Sound Profile"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView4"
                android:layout_below="@+id/tvLocation"
                android:padding="8dp"
                android:text="Ringtone"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/sRingtone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3"
                android:layout_margin="16dp"
                android:background="@color/colorAccent"
                android:padding="8dp" />

            <SeekBar
                android:id="@+id/sbAlarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/alarm"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/textView5" />

            <ImageView
                android:id="@+id/alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView5"
                android:layout_below="@+id/sNotification"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/ic_access_alarm_black_24dp" />

            <ImageView
                android:id="@+id/media"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/alarm"
                android:layout_below="@+id/alarm"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/ic_notifications_black_24dp" />

            <ImageView
                android:id="@+id/ring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/sbVolume"
                android:layout_alignStart="@+id/media"
                app:srcCompat="@drawable/ic_music_note_black_24dp" />

            <SeekBar
                android:id="@+id/sbNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/media"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/sbAlarm" />

            <SeekBar
                android:id="@+id/sbVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/sbNotification"
                android:layout_below="@+id/sbNotification"
                android:layout_marginTop="21dp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="23dp"
                android:background="@color/colorAccent"
                android:text="Save"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/textView4"
                android:layout_marginTop="52dp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView3"
                android:layout_below="@+id/sRingtone"
                android:layout_marginTop="13dp"
                android:padding="8dp"
                android:text="Alarm"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/sAlarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView"
                android:layout_margin="16dp"
                android:background="@color/colorAccent"
                android:padding="8dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/sAlarm"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:text="Notification"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/sNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView5"
                android:layout_margin="16dp"
                android:background="@color/colorAccent"
                android:padding="8dp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btnSave"
                android:layout_alignParentEnd="true">

            </android.support.design.widget.TextInputLayout>

            <EditText
                android:id="@+id/etProfile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter Your Profile Name"
                android:layout_below="@+id/cbVibrate"
                android:layout_alignParentStart="true"
                android:layout_marginTop="13dp" />

            <CheckBox
                android:id="@+id/cbVibrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Vibrate"
                android:layout_below="@+id/ring"
                android:layout_alignStart="@+id/ring"
                android:layout_alignEnd="@+id/textView4" />

        </RelativeLayout>

</ScrollView>
